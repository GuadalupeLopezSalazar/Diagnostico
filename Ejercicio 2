package diagnostico2;
import java.util.Scanner;  /*LIBRERIA DE INTRODUCCION DE DATOS*/

/**
 *
 * @Guadalupe
 */
public class Diagnostico2 {
    public static void main(String[] args) {
      Scanner teclado=new Scanner(System.in);      /*PERMITE INGRESAR DATOS POR TECLADO*/
      System.out.print("Introduzca el tama√±o de la matriz que desee:");    /*SE SOLICITAN DATOS*/
      int n=teclado.nextInt();   /*VARIABLE PARA ALMACENAR EL VALOR INTRODUCIDO*/
      for(int i=0; i<=n; i++){
      for(int k=n-1; k>0;k--){    /*TOCO EL CICLO FOR PERMITE REALIZAR ACCIONES*/
      System.out.print(" ");      /*SIEMPRE Y CUANDO SE CUMPLAN LAS CONDICIONES*/
}
      for (int k=0;k<i;k++){
      System.out.print(" *");
}
      System.out.println("");
}
}
} 
